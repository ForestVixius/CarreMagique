<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/fond"
    tools:context="fr.victorguegan.carremagique.Accueil">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_top"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"

        android:background="@color/colorPrimary"
        app:theme="@style/ToolBarTheme" >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CarrÃ© Magique"
            android:fontFamily="@font/piximisa"
            android:textSize="20dp"
            android:textColor="@color/texteClair"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />


    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/imageview"
        android:layout_width="300dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical | center_horizontal"
        android:layout_marginLeft="-150dp"
        android:layout_height="200dp"
        android:src="@drawable/carre"/>

    <Button
        android:id="@+id/accueil_nouvellePartie"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:layout_marginLeft="150dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical | center_horizontal"
        android:background="@drawable/bouton_bord_rond"
        android:fontFamily="@font/piximisa"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:textColor="@color/texteClair"
        android:text="@string/newgame"/>

    <Button
        android:id="@+id/accueil_quitter"
        android:layout_width="150dp"
        android:fontFamily="@font/piximisa"
        android:textColor="@color/texteClair"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@drawable/bouton_bord_rond"
        android:text="@string/exit"/>

</FrameLayout>
